// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RealEstate {
  id                Int                @id @default(autoincrement())
  name              String
  quantity          String?
  image             String
  developer         String
  location          String
  handover          String
  price             Int
  isSell            Boolean?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  images            Images[]
  priceDescriptions PriceDescription[]
  descriptions      Description[]
}

model Images {
  id           Int         @id @default(autoincrement())
  thumbUrl     String
  realEstate   RealEstate? @relation(fields: [realEstateId], references: [id])
  realEstateId Int?
}

model PriceDescription {
  id           Int         @id @default(autoincrement())
  descriprion  String
  realEstate   RealEstate? @relation(fields: [realEstateId], references: [id])
  realEstateId Int?
}

model Description {
  id           Int         @id @default(autoincrement())
  descriprion  String
  realEstate   RealEstate? @relation(fields: [realEstateId], references: [id])
  realEstateId Int?
}

model developer {
  id        String   @id @default(uuid())
  name      String
  isArchive Boolean?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model location {
  id        String   @id @default(uuid())
  name      String
  isArchive Boolean?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model handover {
  id        String   @id @default(uuid())
  name      String
  isArchive Boolean?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
